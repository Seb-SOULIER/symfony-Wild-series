{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
        <div>
            <h2>Episode : {{ episode.number }} - {{ episode.title }}</h2>
            <p>{{ episode.synopsis }}</p>
        </div>
    <div>
        <a href= "{{ path("program_season_show", { "program": program.id, "season": season.id }) }}">
            Retour à la liste des episodes
        </a>
    </div>
    <div>
        <a href= "{{ path("program_show", { "program": program.id }) }}">
            Retour à la liste des saisons
        </a>
    </div>
    <div>
        <a href= "{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </div>
{% endblock %}