{% extends 'base.html.twig' %}
{% block title %}Season #{{ season.number }}{% endblock %}

{% block body %}
        <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

    {% for episode in episodes %}
        <div>
            <h2>{{ loop.index }} / Episode : {{ episode.number }} - {{ episode.title }}</h2>
            <p>{{ episode.synopsis }}</p>
            <a href="{{ path('program_episode_show', { slug : program.slug , season_id: season.id, slug_episode: episode.slug }) }}">Voir l'épisode {{ episode.number }}</a>
        </div>
    {% else %}
        Aucun épisode trouvé.
    {% endfor %}
    <div>
    <a href= "{{ path("program_show", { slug: program.slug }) }}">
        Retour à la liste des saisons
    </a>
    </div>
    <div>
    <a href= "{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
    </div>
{% endblock %}