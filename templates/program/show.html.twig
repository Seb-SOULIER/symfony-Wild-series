{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
    {% for season in seasons %}
        <div>
            <h2>{{ loop.index }} / Saison : {{ season.number }}</h2>
            <p>{{ season.description }}</p>
            {# Lien vers la fiche de la season : #}
           <a href="{{ path("program_season_show", { 'slug':program.slug , season_id: season.id }) }}">Voir la saison {{ season.number }}</a>
        </div>
    {% else %}
        Aucune saison trouvée.
    {% endfor %}
    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>{{ actor.name }} </li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>
    <a href= "{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}